#include <Servo.h>

Servo myServo; // Create a servo object

void setup() {
    myServo.attach(9); // Attach servo to pin 9
    Serial.begin(9600);
}

void loop() {
    // Move the servo from 0째 to 180째
    for (int pos = 0; pos <= 180; pos += 5) {
        myServo.write(pos);
        Serial.print("Servo Angle: ");
        Serial.println(pos);
        delay(500);
    }

    // Move the servo from 180째 back to 0째
    for (int pos = 180; pos >= 0; pos -= 5) {
        myServo.write(pos);
        Serial.print("Servo Angle: ");
        Serial.println(pos);
        delay(500);
    }
}
